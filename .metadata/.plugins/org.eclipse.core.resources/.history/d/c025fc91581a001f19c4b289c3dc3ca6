<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core"%>

<!DOCTYPE html>
<html>
<head>
<meta charset="ISO-8859-1">
<title>Books</title>
<link rel="stylesheet" href="css/admin-books.css">
<script>
	function redirectToNewPage() {
		window.location.href = "/new-book"; 
	}
	function confirmDelete(bookId) {
        if (confirm("Are you sure you want to delete this Book?")) {
            window.location.href = "books/delete?id=" + bookId;
        }
    }
</script>
</head>
<body>
	<div class="services-container">
		<h1 class="services">BOOK DETAILS</h1>
	</div>
	<table border="1">
		<tr>
			<th>SERIAL NO.</th>
			<th>BOOK ID</th>
			<th>BOOK TITLE</th>			
			<th>AUTHOR</th>
			<th>CATEGORY</th>
			<th>LANGUAGE</th>
			<th>PUBLICATION</th>
			<th>PRICE</th>
			<th>TOTAL COPIES</th>
			<th>EDIT</th>
			<th>DELETE</th>
		</tr>

        <c:forEach var="book" items="${booksList}" varStatus="status">
            <tr>
            	<td>${status.index + 1}</td>
                <td>${book.book_id}</td>
                <td>${book.bookTitle}</td>
                <td>${book.author}</td>
                <td>${book.category}</td>
                <td>${book.language}</td>
                <td>${book.publication}</td>
                <td>${book.price}</td>
                <td>${book.totalCopies}</td>
                <td><a href="/edit-book?id=${book.book_id}">EDIT</a></td>
                <td><a href="#" onclick="confirmDelete(${book.book_id})">DELETE</a></td>
            </tr>
        </c:forEach>	</table>
	<button class="add-button" onclick="redirectToNewPage()">ADD NEW BOOK</button>
</body>
