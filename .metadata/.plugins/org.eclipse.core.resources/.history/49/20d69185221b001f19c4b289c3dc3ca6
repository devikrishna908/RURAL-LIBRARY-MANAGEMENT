<script>
	function redirectToNewPage() {
		window.location.href = "/new-member"; 
	}
	function confirmDelete(memberId) {
        if (confirm("Are you sure you want to delete this Member?")) {
            window.location.href = "/delete-member?id=" + memberId;
        }
    }
</script>
